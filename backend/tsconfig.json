{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "strict": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "baseUrl": "./",
        "incremental": true,
        "paths": {
            "@shared/*": ["src/shared/*"],
            "@auth/*": ["src/auth/*"],
            "@dictionary/*": ["src/dictionary/*"],
            "@users/*": ["src/users/*"],
            "@contacts/*": ["src/contacts/*"],
            "@company/*": ["src/company/*"],
            "@good/*": ["src/good/*"],
            "@enduser/*": ["src/enduser/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}
