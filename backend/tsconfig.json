{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "paths": {
            "@shared/*": ["src/shared/*"],
            "@auth/*": ["src/auth/*"],
            "@dictionary/*": ["src/dictionary/*"],
            "@users/*": ["src/users/*"],
            "@companies/*": ["src/companies/*"]
        }
    },
    "exclude": ["node_modules"]
}
