#!groovy

properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
    }

    environment {
        BACKEND_DIRECTORY = 'backend/'
        FRONTEND_DIRECTORY = 'frontend/'
    }

    triggers { pollSCM('* * * * *') }

    options {
        buildDiscarder(
            logRotator(
                numToKeepStr: '10',
                artifactNumToKeepStr: '10'
            )
        )
        timestamps()
    }

    stages {
        stage("Build backend") {
            steps {
                script {
                    try {
                        sh "git diff --quiet --exit-code HEAD~1..HEAD ${BACKEND_DIRECTORY}"
                    } catch (err) {
                        sh 'chmod +x jenkins/scripts/backend_build.sh'
                    }
                }
            }
        }

        stage("Build frontend") {
            steps {
                script {
                    try {
                        sh "git diff --quiet --exit-code HEAD~1..HEAD ${FRONTEND_DIRECTORY}"
                    } catch (err) {
                        sh 'chmod +x jenkins/scripts/frontend_build.sh'
                    }
                }
            }
        }
    }
}
