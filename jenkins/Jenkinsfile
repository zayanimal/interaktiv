#!groovy

properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
    }

    triggers { pollSCM('* * * * *') }

    options {
        buildDiscarder(
            logRotator(
                numToKeepStr: '10',
                artifactNumToKeepStr: '10'
            )
        )
        timestamps()
    }

    stages {
        stage("Build backend") {
            steps {
                sh 'chmod +x jenkins/scripts/backend_build.sh'
                sh './jenkins/scripts/backend_build.sh'
            }
        }
    }
}
